<main>
  <p id="notice"></p>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>

        <% if @user.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@user.errors.count, "error") %> prohibited this record from being saved:</h2>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <%= form_with(model: @user, local: true) do |form| %>

          <div class="form-group">
            <%= form.label :name %>
            <%= form.text_field :name, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.label :Image %>
            <%= form.file_field :profile_image, class: 'form-control-file', accept: 'image/*' %>
          </div>

          <div class="form-group">
            <%= form.label :introduction %>
            <%= form.text_area :introduction, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= form.submit "Update User", class: 'btn btn-secondary', data: { disable_with: "Updating..." } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>
