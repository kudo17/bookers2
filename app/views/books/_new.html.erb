<h2 class="mt-3">New book</h2>
<% if book.errors.any? %>
  <ul class="alert alert-danger" role="alert">
    <h6 class="alert-heading">
      <%= book.errors.count %>件のエラーが発生しました
    </h6>
    <% book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with(model: book, url: "/books", method: "post") do |form| %>

  <div class="form-group">
    <%= form.label :title, "Title" %>
    <%= form.text_field :title, class: "form-control book_title", id: "book_title" %>
  </div>

  <div class="form-group">
    <%= form.label :body, "Opinion" %>
    <%= form.text_area :body, class: "form-control book_body", id: "book_body" %>
  </div>

  <div class="form-group">
    <%= form.submit "Create Book", class: "btn btn-success", data: { disable_with: "Create Book" } %>
  </div>
<% end %>
